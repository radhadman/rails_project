<p style="color: green"><%= notice %></p>

<h1>Task List</h1>
<hr>

<div id="tasks" style="margin-top: 10px">
  <% @tasks.each do |task| %>
  <div class="alert alert-dark">
    <%= render task %>
    <hr>

    <%= link_to "View", task_path(task), class:"btn btn-outline-primary btn-sm" %>
   <%= link_to "Edit", edit_task_path(task), class:"btn btn-outline-secondary btn-sm" %>
<%= link_to 'Delete', task, method: :delete, class: "btn btn-outline-danger btn-sm" %>

    </div>

  <% end %>
</div>

<%= link_to "Create Task", new_task_path, class:"btn btn-outline-dark" %>
